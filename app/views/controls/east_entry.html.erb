<% title("East Entry") %>
<div id="index">
	<div id="E1_lights" class="K1_section">
		<h2>
			<%= image_tag "/images/controls/lights_logo.png", :class => "logo", :style => "margin: -1px 12px 0 0;" %> Lights
		</h2>	
		<div style="width: 25%; float: left; margin-left: 40px;">
			<%= render :partial => "UI/vertical_slider", :locals => { :subsystem => "lights", :slider_id => "K1_light_kitchen", :value => @mode.settings[:lights][:K1_light_kitchen], :label => "Kitchen", :device_id => DEVICES["lights_kitchen"] } %>
		</div>
		<div style="width: 25%; float: left;">
			<%= render :partial => "UI/vertical_slider", :locals => { :subsystem => "lights", :slider_id => "K1_light_lounge", :value => @mode.settings[:lights][:K1_light_lounge], :label => "Lounge", :device_id => DEVICES["lights_lounge"] } %>
		</div>
		<div style="width: 25%; float: left;">
			<%= render :partial => "UI/vertical_slider", :locals => { :subsystem => "lights", :slider_id => "K1_light_sleeping_area", :value => @mode.settings[:lights][:K1_light_sleeping_area], :label => "Sleeping Area", :device_id => DEVICES["lights_sleeping"] } %>
		</div>
		<div style="float: left;">
			<%= render :partial => "UI/vertical_toggle", :locals => { :toggle_id => "K1_light_landscape", :state => @mode.settings[:lights][:K1_light_landscape], :label => "Landscape", :device_id => DEVICES["lights_landscape"] } %>
		</div>
	</div>
	<div class="clearing"></div>
	<div id="E1_modes" class="K1_section">
		<h2><%= image_tag "/images/controls/modes_logo.png", :class => "logo", :style => "margin: -5px 9px 0 -7px;" %> Presets</h2>
		<%= render :partial => "UI/mode_buttons", :locals => { :set_id => "K1_mode_buttons", :active_id => @mode.id } %>
	</div>
</div>
<script type="text/javascript">updateControls(eval("mode_" + active_mode + "_settings"), false, true, "east");</script>