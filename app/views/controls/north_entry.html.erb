<% title("North Entry") %>
<div id="index">
	<div id="N1_lights" class="K1_section">
		<h2>
			<%= image_tag "/images/controls/lights_logo.png", :class => "logo", :style => "margin: -1px 12px 0 0;" %> Lights
		</h2>	
		<div style="width: 20%; float: left; margin-left: 20px;">
			<%= render :partial => "UI/vertical_toggle", :locals => { :toggle_id => "K2_light_entry", :state => @mode.settings[:lights][:K2_light_entry], :label => "Interior Entry", :device_id => DEVICES["lights_entry"] } %>
		</div>
		<div style="width: 20%; float: left;">
			<%= render :partial => "UI/vertical_toggle", :locals => { :toggle_id => "K2_light_exterior_entry", :state => @mode.settings[:lights][:K2_light_exterior_entry], :label => "Exterior Entry", :device_id => DEVICES["lights_ext_entry"] } %>
		</div>
		<div style="width: 20%; float: left;">
			<%= render :partial => "UI/vertical_slider", :locals => { :subsystem => "lights", :slider_id => "K1_light_kitchen", :value => @mode.settings[:lights][:K1_light_kitchen], :label => "Kitchen", :device_id => DEVICES["lights_kitchen"] } %>
		</div>
		<div style="width: 20%; float: left;">
			<%= render :partial => "UI/vertical_slider", :locals => { :subsystem => "lights", :slider_id => "K1_light_dining_area", :value => @mode.settings[:lights][:K1_light_dining_area], :label => "Dining Area", :device_id => DEVICES["lights_dining"] } %>
		</div>
		<div style="float: left;">
			<%= render :partial => "UI/vertical_toggle", :locals => { :toggle_id => "K1_light_landscape", :state => @mode.settings[:lights][:K1_light_landscape], :label => "Landscape", :device_id => DEVICES["lights_landscape"] } %>
		</div>
	</div>
	<div class="clearing"></div>
	<div id="N1_modes" class="K1_section">
		<h2><%= image_tag "/images/controls/modes_logo.png", :class => "logo", :style => "margin: -5px 9px 0 -7px;" %> Presets</h2>
		<%= render :partial => "UI/mode_buttons", :locals => { :set_id => "K1_mode_buttons", :active_id => @mode.id } %>
	</div>
</div>
<script type="text/javascript">updateControls(eval("mode_" + active_mode + "_settings"), false, true, "north");</script>