<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
	<head>
		<title>North House | <%= yield(:title) %></title>
		
		<!-- META -->
		<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />

		<!-- ICONS -->
		<link rel="shortcut icon" href="/images/icons/favicon.png" type="image/png" /> <!-- standards-based browsers -->
		<link rel="shortcut icon" href="/images/icons/favicon.ico" /> <!-- IE6 -->
		
		<!-- STYLE -->
		<%= stylesheet_link_tag "base" %>
		<%= stylesheet_link_tag "text" %>
		<%= stylesheet_link_tag "elements" %>
		<%= stylesheet_link_tag "tables" %>
		<%= stylesheet_link_tag "ui_elements" %>
		<%= stylesheet_link_tag "nav" %>
		<%= stylesheet_link_tag "menu" %>		
		<%= stylesheet_link_tag "forms" %>		
		<% if controller.controller_name == "main" && controller.action_name == "overview" %>
			<%= stylesheet_link_tag "overview" %>
		<% end %>
		<%= stylesheet_link_tag 'redbox' %>
		<%= stylesheet_link_tag 'notifications' %>
		<%= stylesheet_link_tag "community" %>
		<%= stylesheet_link_tag 'sub_pages' %>
		<%= stylesheet_link_tag "flot" %>
		<%= stylesheet_link_tag "house_settings" %>		
		<%= stylesheet_link_tag "settings" %>		
		<%= stylesheet_link_tag 'resource_use' %>
		<%= stylesheet_link_tag 'ui_elements' %>
		<%= stylesheet_link_tag 'mode_controls' %>
		<% if demo? %><%= stylesheet_link_tag 'demo' %><% end %>
		
		<!-- BEHAVIOUR -->
		<%= javascript_include_tag :defaults %>
		<%= javascript_include_tag 'characterCounter' %>
		<%= javascript_include_tag 'excanvas.pack' %>
		<%= javascript_include_tag 'hide-show' %>
		<%= javascript_include_tag 'mouseOver' %>
		<%= javascript_include_tag 'redbox' %>
		<%= javascript_include_tag 'utility' %>
		<%= javascript_include_tag 'ui_functions' %>
		<%= javascript_include_tag 'mode_controls' %>

		<!-- GRAPHING -->
		<!--[if IE]><script language="javascript" type="text/javascript" src="../javascripts/excanvas.pack.js"></script><![endif]-->
		<%= javascript_include_tag 'jquery' %>
		<%= javascript_include_tag 'jquery.flot' %>
		<script type="text/javascript">
			var $j = jQuery.noConflict()
			document.observe("dom:loaded", function() {
			  load_page_scripts();
			});
		</script>
		
	</head>
	<body>
		<div id="container">
			<%= render :partial => "nav/menu" %>
			<%= render :partial => "notifications/list" %>
			<div id="content">
				<% if controller.controller_name == "community" %>
					<%= render :partial => "profile_modal" %>
				<% end %>
				<% if controller.controller_name == "modes" %>
					<%= render :partial => "new_mode_modal" %>
					<%= render :partial => "sidebar" %>
				<% end %>
				<%= yield %>
			</div>
			<%= render :partial => "nav/global_nav" %>
			<% if demo? %>
				<div id="demo_footer">
					<%= image_tag "/images/icons/favicon.png", :alt => "North House", :style => "margin: 0 10px -2px 0;" %> 
					Welcome to the North House web application demo!  Please note that not all features are fully functional, and that all data is displayed purely for demonstration purposes.
				</div>
			<% end %>
		</div>
		<% if controller.controller_name == "modes" %>
			<script type="text/javascript">initializeModeControls();</script>	
		<% end %>
	</body>
</html>
