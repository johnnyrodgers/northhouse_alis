<!-- CHALLENGE -->
<div id="challenge" class="panel">
	<div class="toolbar">
    <h1>Challenge</h1>
  </div>
	  <div class="challenge">
	  		<div class="challenge_header">
				<span class="title white">CHALLENGE:</span><span class="subtitle lightGrey">PRODUCE <%= @production_goal.to_i %> kWh OF ENERGY</span>
			
			</div>
			<div class="divider"></div>
	 		<div class="subpanel">
			
			<br />
			<div class="bars">	
    							
			<center><div class="progress_variable_top">ELECTRICITY (kWh)</div></center>
			
			<ul class="progress_numbers_top">
				<li>0</li>
				<li><%= @production_goal.to_i / 5 %></li>
				<li><%= (@production_goal.to_i / 5) * 2 %></li>
				<li><%= (@production_goal.to_i / 5) * 3 %></li>
				<li><%= (@production_goal.to_i / 5) * 4 %></li>
				<li class="green last"><%= @production_goal.to_i %></li>
			</ul>
			<br />
			
			<ul class="progress_tabs_top">
				<li class="progress_tabs_top"></li>
				<li class="progress_tabs_top"></li>
				<li class="progress_tabs_top"></li>
				<li class="progress_tabs_top"></li>
				
				
				
			</ul>
		
			
			<div class="progress_bkg">
				<div class="progress_bar_container"><br />
					<div style="width: <%= (@energy_produced / @production_goal) * 100 %>%;"  class="progress_bar" ></div>
				</div>
			</div>
	
			<ul class="progress_tabs_bottom">
				<li class="progress_tabs_bottom"></li>
				<li class="progress_tabs_bottom"></li>
				<li class="progress_tabs_bottom"></li>
				<li class="progress_tabs_bottom"></li>
			
			</ul>
			
			<ul class="progress_numbers_bottom">
				<li>0</li>
				<li>20</li>
				<li>40</li>
				<li>60</li>
				<li>80</li>
				<li class="green last">100</li>
			</ul>
			<center><div class="progress_variable_bottom">PRODUCTION (%)</div></center>
			
	</div>
	<center>
		<table class="details">
<!--
		<tr>
			<td class="left"><div class="details_label darkGrey">COMMUNITY RANKINGS</div></td><td><div class="details_data green"><b>2nd</b> place</div></td>
		</tr>
-->
		<tr>
			<td class="left"><div class="details_label darkGrey">ELECTRICITY PRODUCED</div></td><td><div class="details_data white"><b><%= @energy_produced.to_i %></b> kWh</div></td>
		</tr>
		<tr>
			<td class="left" ><div class="details_label darkGrey">TIME REMAINING</div></td><td><div class="details_data white"><b><%= (DateTime.new(2009,10,19) - (DateTime.now - 1)).to_i %></b> Days</div></td>
		</tr>
		</table>
	</center>			
	
		<div class="divider"></div>
			<div class="challenge_links">
				<a class="leader_btn" href="#leader_board"></a>
				<a class="chatter_btn" href="#chatter"></a>	
			</div>	
		</div>
	</div>
</div>

