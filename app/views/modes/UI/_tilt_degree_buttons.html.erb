<div id="<%= control_id %>_degree_buttons_<%= section %>" class="tilt_degree_buttons <%= section %>" style="display: <% if active %>block<% else %>none<% end %>;" master="<%= master %>">
	<% if section == "upper" %>
		<%= link_to_function "", "setTilt('#{control_id}', '#{section}', 55); modeTiltCallback('#{control_id}', '#{section}', 55)", :class => "tilt55", :id => control_id + "_" + section + "_55" %>
		<%= link_to_function "", "setTilt('#{control_id}', '#{section}', 90); modeTiltCallback('#{control_id}', '#{section}', 90)", :class => "tilt90", :id => control_id + "_" + section + "_90" %>
		<%= link_to_function "", "setTilt('#{control_id}', '#{section}', 125); modeTiltCallback('#{control_id}', '#{section}', 125)", :class => "tilt125", :id => control_id + "_" + section + "_125" %>
		<%= link_to_function "", "setTilt('#{control_id}', '#{section}', 140); modeTiltCallback('#{control_id}', '#{section}', 140)", :class => "tilt160", :id => control_id + "_" + section + "_140" %>
	<% elsif section == "lower" %>
		<%= link_to_function "", "setTilt('#{control_id}', '#{section}', 55); modeTiltCallback('#{control_id}', '#{section}', 55)", :class => "tilt55", :id => control_id + "_" + section + "_55" %>
		<%= link_to_function "", "setTilt('#{control_id}', '#{section}', 90); modeTiltCallback('#{control_id}', '#{section}', 90)", :class => "tilt90", :id => control_id + "_" + section + "_90" %>
		<%= link_to_function "", "setTilt('#{control_id}', '#{section}', 125); modeTiltCallback('#{control_id}', '#{section}', 125)", :class => "tilt125", :id => control_id + "_" + section + "_125" %>
		<%= link_to_function "", "setTilt('#{control_id}', '#{section}', 160); modeTiltCallback('#{control_id}', '#{section}', 160)", :class => "tilt160", :id => control_id + "_" + section + "_160" %>	
	<% end %>
	<script type="text/javascript">
		if (<%= master %>) {
			//create slaves array
			var <%= control_id %>_degree_button_slaves = [ '<%= slaves.join("','") %>' ];
		}
	</script>  
</div>
