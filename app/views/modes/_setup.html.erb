<div class="items">
	<label>Name</label> 
	<%= f.text_field "name" %>
</div>
<div class="items">
	<label>Assigned Colour</label>
	<%= select_tag "mode[colour]", options_for_select([["Pink", "B1365F"], ["Red", "A32929"], ["Purple", "5229A3"], ["Blue", "2952A3"], ["Aqua", "1B887A"], ["Green", "0D7813"], ["Orange", "BE6D00"]], @mode.colour) %>
</div>
<div class="items">
	<label>Description</label> 
	<%= f.text_area "description" %>
</div>
<div class="items" style="margin-bottom: -5px;">
	<label>Optimization</label>
	<%= select_tag "mode[optimization]", options_for_select([["On", true], ["Off", false]], @mode.optimization), { :style => "float: left;" } %>
	<p class="note">Enabling Optimization allows North House to automate the Exterior Shading to maximize efficiency.</p>
</div>

