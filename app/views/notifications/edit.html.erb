<h1>Editing notification</h1>

<% form_for(@notification) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :message %><br />
    <%= f.text_area :message, :rows => 10 %>
  </p>
  <p>
    <%= f.label :priority %><br />
    <%= f.select :priority, { "Error" => 0, "Important" => 1, "Notification" => 2, "Tip" => 3 }, { :selected => @notification.priority } %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @notification %> |
<%= link_to 'Back', notifications_path %>